<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/haneesh4"
    tools:context=".StorageActivity">

    <EditText
        android:id="@+id/txtData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:hint="Please enter data" />

    <Button
        android:id="@+id/SaveDatabutton"
        android:layout_width="146dp"
        android:layout_height="34dp"
        android:layout_below="@+id/txtData"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="265dp"
        android:layout_marginRight="265dp"
        android:background="#E8D84C"
        android:onClick="save"
        android:text="Please Save" />

    <Button
        android:id="@+id/LoadDatabutton"
        android:layout_width="177dp"
        android:layout_height="37dp"
        android:layout_below="@+id/SaveDatabutton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-37dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:background="#9ADA4F"
        android:onClick="load"
        android:text="Please Load" />

    <TextView
        android:id="@+id/Datashow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LoadDatabutton"
        android:layout_marginTop="60dp"
        android:textColor="#3F51B5"
        android:textSize="24sp" />
</RelativeLayout>